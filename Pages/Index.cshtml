@page
@model IndexModel
@{
    ViewData["Title"] = "tfpugs.com - Team Fortress Pickup Games";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <h1 class="page-title text-center mb-4">TFPugs.com News & Updates</h1>

            @if (Model.NewsItems.Any())
            {
                foreach (var item in Model.NewsItems)
                {
                    <div class="card shadow-sm mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                @item.Title
                            </h5>
                            <small class="text-muted">@item.Timestamp.ToString("yyyy-MM-dd")</small>
                        </div>
                        <div class="card-body">
                            @Html.Raw(item.Content)
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="alert alert-info text-center">
                    <p>Welcome to tfpugs.com!</p>
                    <p class="mb-0">News and updates will be posted here.</p>
                </div>
            }
        </div>
    </div>
</div>
